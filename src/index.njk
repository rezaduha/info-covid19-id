            <div class="card-body text-center bg-light shadow rounded">
                <h5 class="card-title text-warning" style="font-size: 4rem;">{{ covid19.confirmed.value }}</h5>
                <p class="card-text">Terkonfirmasi</p>
            </div>
        </div>
        <div class="card">
            <div class="card-body text-center bg-light shadow rounded">
                <h5 class="card-title text-info" style="font-size: 4rem;">{{ covid19.activeCare.value }}</h5>
                <p class="card-text">Dalam Perawatan</p>
            </div>
        </div>
        <div class="card">
            <div class="card-body text-center bg-light shadow rounded">
                <h5 class="card-title text-success" style="font-size: 4rem;">{{ covid19.recovered.value }}</h5>
                <p class="card-text">Sembuh</p>
            </div>
        </div>
        <div class="card">
            <div class="card-body text-center bg-light shadow rounded">
                <h5 class="card-title text-danger" style="font-size: 4rem;">{{ covid19.deaths.value }}</h5>
                <p class="card-text">Meninggal</p>
            </div>
        </div>
    </div>
</div>


